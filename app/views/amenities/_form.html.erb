<%= form_for @amenity, :html => { :class => "form-horizontal amenity" } do |f| %>

  <% if @amenity.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@amenity.errors.count, "error") %> prohibited this amenity from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @amenity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :indoor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :indoor %>
    </div>
    <%=f.error_span(:indoor) %>
  </div>
  <div class="form-group">
    <%= f.label :outdoor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :outdoor%>
    </div>
    <%=f.error_span(:outdoor) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :property_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :property_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:property_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                amenities_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
