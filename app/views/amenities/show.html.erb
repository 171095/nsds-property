<%- model_class = Amenity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:indoor) %>:</strong></dt>
  <dd><%= @amenity.indoor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:outdoor) %>:</strong></dt>
  <dd><%= @amenity.outdoor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @amenity.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_id) %>:</strong></dt>
  <dd><%= @amenity.property_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              amenities_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_amenity_path(@amenity), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              amenity_path(@amenity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
