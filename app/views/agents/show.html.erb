<%- model_class = Agent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="col-md-3">
  <dd><%= image_tag @agent.image_url %></dd>

  <dd><%= @agent.name %></dd>

  <dd><%= @agent.address %></dd>
  
  <dd><%= @agent.contact %></dd>

  <%= link_to t('.back', :default => t("helpers.links.back")),
  agents_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_agent_path(@agent), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  agent_path(@agent),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>

</div>

<div class="col-md-9">
  <% @agent.properties.each do |property| %>
  <div class="col-md-4">
    <%# property.images.each do |img| %>
    <%= link_to property_path(property) do %>
      <%= image_tag property.images.first.image_url, class: "img-responsive" %>
    <% end %>
    <%# end %>
  </div>
  <% end %>
</div>


